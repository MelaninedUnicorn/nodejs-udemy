<main>
    <h1>My Products</h1>
    {{#if hasProducts }}
    <div class="grid">
        {{#each prods}}
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">{{ this.title }} </h1>
            </header>
            <div class="card__image">
                <img src="https://cms-media.taylorandhart.com/2019/10/22104123/collection-rings2-1-600x750.jpg"
                    alt="A Book">
            </div>
            <div class="card__content">
                <h2 class="product__price">$59.99</h2>
                <p class="product__description">A very nice pair of shoes!</p>
            </div>
            <div class="card__actions">
                <button class="btn">Add to Cart</button>
            </div>
        </article>
        {{/each}}
    </div>
    {{else }}
    <h3>No Products found</h3>

    {{/if }}

</main>