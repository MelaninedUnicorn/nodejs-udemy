extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")

block content
    main
            if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            .card__image
                            img(src="https://cms-media.taylorandhart.com/2019/10/22104123/collection-rings2-1-600x750.jpg" alt="A Converse shoe")
                            .card__content
                                h2.product__price $59.99
                                p.product__description A very nice pair of shoes!
                            .card__actions
                                button.btn Add to Cart  
            else
                h1 No Products